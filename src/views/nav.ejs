  .tabbar__container-item.active {
    background-color: #f0f0f000; /* Example active style */
    color: #1ab266 !important;
  }
</style>

<script>
  // Wait for the DOM to load
  document.addEventListener('DOMContentLoaded', () => {
    // Get the current URL path
    const currentPath = window.location.pathname;

    // Find all tab items
    const tabItems = document.querySelectorAll('.tabbar__container-item');

    // Loop through each tab item
    tabItems.forEach(item => {
      const img = item.querySelector('img'); // Get the image element
      if (item.getAttribute('data-link') === currentPath) {
        item.classList.add('active'); // Add the active class
        // Change the image to active
        img.src = img.getAttribute('data-active');
      } else {
        item.classList.remove('active'); // Remove active class
        // Change the image to inactive
        img.src = img.getAttribute('data-inactive');
      }
    });
  });
</script>
